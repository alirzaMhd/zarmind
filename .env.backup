# ===============================================================
# Zarmind Backend Environment Variables
#
# INSTRUCTIONS:
# 1. Copy this file to .env in the same directory (backend/.env)
# 2. Replace placeholder values (like your_db_password) with your actual settings.
# 3. Do NOT commit the .env file to version control.
# ===============================================================

# -------------------------
# Application Configuration
# -------------------------
# Environment: 'development', 'test', or 'production'
NODE_ENV=development

# The port the backend server will run on
PORT=3000

# Application name (optional)
APP_NAME=Zarmind

# -------------------------
# Database (PostgreSQL)
# -------------------------
# Format: postgresql://[USER]:[PASSWORD]@[HOST]:[PORT]/[DATABASE]
# Example: postgresql://postgres:mysecretpassword@localhost:5432/zarmind_db?schema=public
DATABASE_URL="postgresql://your_db_user:your_db_password@localhost:5432/zarmind_db?schema=public"

# -------------------------
# Authentication (JWT)
# -------------------------
# A strong, long, random string is required for signing tokens.
# You can generate one here: https://www.lastpass.com/features/password-generator
JWT_SECRET=fdffbdd8e5e94f6c7397f90f3832d536b6d8a2030f84f2efa0e3a286bb82f6ca

# Token expiration times. Examples: "15m" (15 minutes), "7d" (7 days), "1h" (1 hour)
JWT_ACCESS_EXPIRES_IN="1h"
JWT_ACCESS_EXPIRES_REMEMBER="7d"

# Optional JWT issuer and audience fields
JWT_ISSUER=zarmind-api
JWT_AUDIENCE=zarmind-app

# --------------------------------
# Cookie-Based Authentication (Optional)
# --------------------------------
# Set to 'true' to use secure httpOnly cookies for storing the JWT instead of localStorage.
AUTH_USE_COOKIES=true
JWT_COOKIE_NAME=access_token
JWT_COOKIE_SECURE=false # Should be 'true' in production (if using HTTPS)
JWT_COOKIE_SAME_SITE=lax # 'lax' is a good default. Use 'none' for cross-domain requests.
# JWT_COOKIE_DOMAIN=.yourdomain.com # Uncomment and set for cross-subdomain cookies

# -------------------------
