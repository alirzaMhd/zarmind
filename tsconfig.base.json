{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".", // Important for paths mapping
    "paths": {
      "@zarmind/shared-types": ["packages/shared-types/src"],
      "@zarmind/shared-types/*": ["packages/shared-types/src/*"]
    }
  }
}