{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist", // Compile output to a 'dist' folder
    "declaration": true, // Generate .d.ts type declaration files
    "declarationMap": true, // Helps with source mapping for types
    "composite": true // Important for project references in a monorepo
  },
  "include": ["src"], // Only compile files in the 'src' directory
  "exclude": ["node_modules", "dist"]
}