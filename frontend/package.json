{
  "name": "zarmind-frontend",
  "version": "1.0.0",
  "description": "Frontend for Zarmind - Persian Jewelry Store Accounting System",
  "main": "public/index.html",
  "scripts": {
    "start": "live-server public --port=8080 --host=localhost --open=/",
    "dev": "npm run start",
    "build": "npm run build:css && npm run build:js && npm run copy",
    "build:css": "postcss src/css/main.css -o public/dist/css/styles.min.css",
    "build:js": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "watch:css": "postcss src/css/main.css -o public/dist/css/styles.min.css --watch",
    "clean": "rimraf public/dist",
    "copy": "npm run copy:assets && npm run copy:views",
    "copy:assets": "copyfiles -u 1 'public/assets/**/*' public/dist/",
    "copy:views": "copyfiles -u 1 'src/views/**/*.html' public/",
    "lint": "eslint src/js --ext .js",
    "lint:fix": "eslint src/js --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "npm run lint && npm run format:check",
    "serve:dist": "live-server public/dist --port=8080",
    "preview": "npm run build && npm run serve:dist"
  },
  "keywords": [
    "accounting",
    "jewelry",
    "persian",
    "frontend",
    "spa",
    "rtl"
  ],
  "author": "Zarmind Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/zarmind.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/zarmind/issues"
  },
  "homepage": "https://github.com/your-username/zarmind#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.0.6",
    "date-fns-jalali": "^3.6.0-0",
    "axios": "^1.6.2",
    "izitoast": "^1.4.0",
    "sweetalert2": "^11.10.3",
    "flatpickr": "^4.6.13",
    "choices.js": "^10.2.0",
    "lodash-es": "^4.17.21",
    "print-js": "^1.6.0",
    "file-saver": "^2.0.5",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.8.2",
    "qrcode": "^1.5.3",
    "cleave.js": "^1.6.0"
  },
  "devDependencies": {
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-preset-env": "^9.3.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "html-webpack-plugin": "^5.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/lodash-es": "^4.17.12"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ]
  }
}